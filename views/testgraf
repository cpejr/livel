<canvas id="myChart" width="400" height="400"></canvas>
<script>
var ctx = document.getElementById('myChart').getContext("2d");

var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Red', 'Blue'],
        datasets: [{
            label: {
              fontColor:'#FFFFFF'
            },
            data: [15, 19],
            fontColor: [
              '#C6BBCE',
              '#532166'
            ],
            backgroundColor: [
              '#C6BBCE',
              '#532166'
            ],
            borderWidth: 1
        }]
    },
    options: {
      tooltips: {
         enabled: false
      },
      legend: {
        display: false,
        labels: {
          fontColor: '#FFFFFF'
        }
      },
      responsive: false,
      scales: {
        xAxes: [{
        gridLines: {
          display:false,
          color: '#F2F2F2'
        },
        ticks: {
          maxRotation: 90,
          minRotation: 80
        }
      }],
        yAxes: [{
        gridLines: {
          display:false,
          color: '#F2F2F2'
        },
        ticks: {
          fontColor: '#F2F2F2',
          beginAtZero: true
        }
      }]
      }
    }
});
</script></html>
